{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "moduleNameMapper": {
    "@app/common": "<rootDir>/../libs/common/src",
    "@app/common/(.*)": "<rootDir>/../libs/common/src/$1",
    "^src/(.*)$": "<rootDir>/../src/$1"
  }
}